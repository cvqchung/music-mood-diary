# Spotify API Credentials - https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# Development: http://127.0.0.1:8888/callback
# Production: https://yourdomain.com/callback
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8888/callback

# Anthropic API Key - https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key

# Server Configuration
PORT=8888
SESSION_SECRET=your_random_session_secret_here

# Discord Webhook (optional - for onboarding notifications)
# Create webhook: Server Settings -> Integrations -> Webhooks
# WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL
# WEBHOOK_DB_URL=https://dashboard.render.com/d/YOUR_DATABASE_ID

# PostgreSQL Database
# Local development
# DATABASE_URL=postgresql://localhost/music_mood_diary
# Production (provided by hosting platform)
DATABASE_URL=postgresql://user:pass@host:port/dbname

# Database Pool Configuration (optional)
# DATABASE_POOL_MAX=10
# DATABASE_IDLE_TIMEOUT=30000
# DATABASE_CONNECTION_TIMEOUT=2000

# Environment
NODE_ENV=production

# CORS (Production only)
# Comma-separated list of allowed origins
ALLOWED_ORIGIN=https://yourdomain.com
